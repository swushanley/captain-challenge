<h1>Games#show</h1>
<p>Find me in app/views/games/show.html.erb</p>

<h1>The winner is: <%= Player.find(@game.winner_id).name %></h1>
<table>
  <thead>
    <tr>
      <th>Battle</th>
      <th>Damage</th>
      <th></th>
      <th>Winner</th>
    </tr>
  </thead>
  <tbody>
    <% @statistics.each do |stat| %>
    <tr>
      <td><%= stat.game_name %></td>
      <td><%= Player.find(stat.player_1_id).name %>, <%= Player.find(stat.player_1_id).damage %></td>
      <td><%= Player.find(stat.player_2_id).name %>, <%= Player.find(stat.player_2_id).damage %></td>
   <!--    name of player whose id is the same as the winner_id in the game -->
      <td><%= Player.find(Game.find(stat.game_id).winner_id).name %></td>
    </tr>
  <% end %>
  </tbody>
</table>


